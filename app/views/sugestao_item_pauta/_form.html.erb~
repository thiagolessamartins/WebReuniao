      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :motivoSugestao %><br>
    <%= f.text_area :motivoSugestao %>
  </div>

  <div class="field">
    <%= f.label :reuniao_id %><br>
        <%= f.hidden_field 'reuniao_id' %>
  </div>
  <div class="field">
    <%= f.label :questao_id %><br>
    <%= f.collection_select(:questao_id, Questao.order(:pessoa_id ),:id, :titulo, :prompt => true) %>
  </div>
